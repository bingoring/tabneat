{
  "manifest_version": 3,
  "name": "TabNeat",
  "version": "1.4.0",
  "description": "Automatically sorts and groups your tabs by domain for a cleaner browser experience",
  "permissions": [
    "tabs",
    "storage",
    "tabGroups"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_title": "Sort & Group tabs by domain",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "64": "icons/icon-64.png",
      "128": "icons/icon-128.png"
    }
  },
  "options_page": "options.html"
}
